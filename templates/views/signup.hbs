<!DOCTYPE html>

<html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<head>
    <title>Grade Mangment</title>

    <style>
        .confirm-password {
            position: relative;
        }

        .confirm-password input {
            margin-bottom: 10px;
        }

        .confirm-password span {
            position: absolute;
            top: 0;
            right: 10px;
            cursor: pointer;
        }

        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        .password-instruction {
            color: #888;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }
    </style>
</head>

<body>
    <div class="main-content">
        {{>main}}

        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row justify-content-center align-items-center h-100">
                    <div class="col-12 col-lg-8 col-xl-6">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                            <div class="card-body p-3 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                                <form id="signup-form" action="/users/signup" method="POST">
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" class="form-control form-control-lg" name="name" required
                                                    type="name" id="name">
                                                <label for="name" class="form-label">Name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4 pb-2">
                                            <div class="form-outline">
                                                <input type="text" class="form-control form-control-lg" name="email" required
                                                    type="email" id="email">
                                                <label for="email" class="form-label">Email</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline confirm-password">
                                                <input type="password" class="form-control form-control-lg"
                                                    name="password" required id="password" onfocus="showPasswordInstructions()">
                                                <label for="password" class="form-label">Password</label>
                                            </div>
                                            <div class="error-message" id="password-error"></div>
                                            <div class="password-instruction"  id="password-instruction">Please enter a
                                                password  greater than 7 characters and not containing the word "password"
                                            </div>
                                        </div>
                                    </div>
                                    <div class="confirm-password">
                                        <input type="password" class="form-control form-control-lg"
                                            name="confirm-password" required id="confirm-password">
                                        <label for="confirm-password" class="form-label">Confirm Password</label>
                                        <div class="error-message" id="confirm-password-error"></div>
                                    </div>
                                    <div class="mt-4 pt-2">
                                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
          
            function showPasswordInstructions() {
                var passwordInstruction = document.getElementById("password-instruction");
                passwordInstruction.style.display = "block";
            }

            var signupForm = document.getElementById("signup-form");
            signupForm.addEventListener("submit", function (event) {
                var password = document.getElementById("password").value;
                var confirmPassword = document.getElementById("confirm-password").value;
                var passwordError = document.getElementById("password-error");
                var confirmPasswordError = document.getElementById("confirm-password-error");

                if (password !== confirmPassword) {
                    event.preventDefault();
                    confirmPasswordError.innerHTML = "Passwords do not match";
                } else {
                    confirmPasswordError.innerHTML = "";
                }
            });
        </script>
    </div>
</body>

</html>