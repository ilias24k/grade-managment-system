<!DOCTYPE html>

<html>

<head>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <title>Grade Mangment</title>

<body>

    <div class="main-content">

        {{>main}}


        <div class="container pt-5 pb-5">
            <!-- Content here -->

            <body>
                <h1>Students</h1>
                <p>All Students</p>

                <div class="row">
                    <div class="col-6">

                    </div>
                    <div class="col-6 d-flex justify-content-end">
                        <a href="" type="button" id="analytical" class="btn btn-primary align-self-center" onclick="">
                            Analytical Grade</a>
                        <a href="" type="button" id="typical"
                            class="btn btn-primary align-self-center"> Typical Grade</a>

                    </div>
                </div>
                <div class="col-6 d-flex justify-content-end">

                </div>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Student Name</th>
                            <th scope="col">Email</th>

                            <th scope="col" class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each records}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td class="text-end">

                                <a href="/student/edit/{{_id}}" type="button" class="btn btn-outline-warning"><i
                                        class="bi bi-pencil"></i>Edit</a>

                                <form action="/student/delete/{{_id}}" method="POST">
                                    <input type="hidden" name="id" value="{{ _id}}">
                                    <button class="btn btn-outline-danger"><i class="bi bi-person-x"></i><i
                                            onclick="deleting({{_id}})">Delete</button>
                                </form>
                            </td>

                          
                        </tr>
                        {{/each}}
                    </tbody>


                    </tr>
                    </tbody>
                </table>
                <script>
                    var currentCourse = window.location.pathname.split("/").pop()
                    $("#analytical").attr("href", '/download/analytical/' + currentCourse);
                    $("#typical").attr("href", '/download/typical/' + currentCourse);
                </script>

            </body>
        </div>


    </div>


</body>

</head>

</html>